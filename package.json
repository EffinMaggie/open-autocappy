{
  "name": "open-autocappy",
  "version": "0.1.1",
  "description": "create subtitles with your browser's VoiceRecognition API",
  "main": "index.js",
  "scripts": {
    "test": "node test.js",
    "docs": "node build-docs.cjs",
    "build": "tsc",
    "release": "standard-version",
    "prepare": "husky install",
    "lint": "prettier --check src test *.ts *.json",
    "format": "prettier --write src test *.ts *.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EffinMaggie/open-autocappy.git"
  },
  "keywords": [
    "caption",
    "subtitle",
    "voicerecognition"
  ],
  "author": "Maggie Danger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EffinMaggie/open-autocappy/issues"
  },
  "homepage": "https://github.com/EffinMaggie/open-autocappy#readme",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.9.4",
    "doxygen": "^0.4.0",
    "http-server": "^13.0.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.1",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "precommit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.cjs": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.yml": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}
