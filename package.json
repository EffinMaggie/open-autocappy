{
  "name": "open-autocappy",
  "version": "0.1.1",
  "description": "create subtitles with your browser's VoiceRecognition API",
  "main": "index.js",
  "scripts": {
    "test": "node test.js",
    "doxygen": "node doxygen.cjs",
    "build": "tsc",
    "release": "standard-version",
    "prepare": "node prepare.cjs",
    "lint": "node lint.js",
    "fix": "node fix.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EffinMaggie/open-autocappy.git"
  },
  "keywords": [
    "caption",
    "subtitle",
    "voicerecognition"
  ],
  "author": "Maggie Danger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EffinMaggie/open-autocappy/issues"
  },
  "homepage": "https://github.com/EffinMaggie/open-autocappy#readme",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.9.4",
    "@types/yargs": "^17.0.3",
    "chalk": "^4.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "diff": "^5.0.0",
    "doxygen": "^0.4.0",
    "es-main": "^1.0.2",
    "globby": "^12.0.2",
    "http-server": "^13.0.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.1",
    "typescript": "^4.4.3",
    "yargs": "^17.1.1"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "precommit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.cjs": [
      "npm run fix"
    ],
    "*.ts": [
      "npm run fix"
    ],
    "*.json": [
      "npm run fix"
    ],
    "*.yml": [
      "npm run fix"
    ],
    "*.css": [
      "npm run fix"
    ],
    "*.html": [
      "npm run fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
